extends layout 

include _includes/sharedHTMLfunctions

block content

    - let trick = trickInfo

  .container.py-4.py-xl-5
    .row.mb-5
      .col-md-8.col-xl-6.text-center.mx-auto
        h2.font-weight-bold #{pageHeader.name[trick.name]}
        p.text-muted.w-lg-50 #{pageHeader.title[[trick.name]]}
    
        div.mt-5
          img.rounded.img-fluid.shadow.w-100.fit-cover(src=trick.image, style='height: 350px;')
          .py-4
            p.text-muted.pb-3 #{trick.instructions}
            h5.pb-1 Muscle Groups Engaged
            .muscle-groups.pb-4
              each muscle in trick.muscle_groups
                span.badge.badge-warning.p-2.m-2 #{muscle}
            h5.pb-1 Home Exercises
            a.text-muted(href= '#') 
            p.text-muted #{trick.conditioning}