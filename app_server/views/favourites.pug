extends layout 

include _includes/sharedHTMLfunctions

block content
  .container.py-4.py-xl-5
    .row.mb-5
      .col-md-8.col-xl-6.p-2.text-center.mx-auto.border-bottom.border-top.border-warning.rounded
        h2.font-weight-bold My Favourites
        p.text-muted.w-lg-50 Come back and work on these moves later
    .row.row-cols-1.row-cols-md-2.mx-auto(style='max-width: 900px;')
      each trick in moveDetails
        .col.mb-4.text-center
          div.mb-4
            a(href='/trick')
              img.rounded.img-fluid.shadow.w-100.fit-cover(src=trick.image, style='height: 250px;')    
            .pt-4
              p Difficulty 
                +outputDifficulty(trick.difficulty)
            .py-1
              h4.font-weight-bold #{trick.name}
              p.text-muted #{trick.summary}